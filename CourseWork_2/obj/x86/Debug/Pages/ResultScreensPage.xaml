<Page x:ConnectionId='1'
    x:Class="CourseWork_2.Pages.ResultScreensPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CourseWork_2.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters_Folder="using:CourseWork_2.Converters"
    mc:Ignorable="d">
    <Page.Resources>
        <converters_Folder:RingConverter x:Key="ringConverter" />
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Background="#FFE7E8E8">
            <TextBlock Text="RESULT SCREENS" VerticalAlignment="Center" HorizontalAlignment="Center"
                       FontSize="18" />
        </Grid>

        <Grid Grid.Row="1">
            <Image x:ConnectionId='2'                                                         Height="Auto" Width="Auto"
                                                                                                                          
                                                                                            />
            <GridView x:ConnectionId='3'                                                                                                                                                                                           
                                                                                                  >
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding HeatMapScreen}"
                               Width="{Binding WidthImage}"  Height="{Binding HeightImage}" />
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.ItemContainerStyle>
                    <Style TargetType="FrameworkElement">
                        <Setter Property="Margin" Value="0 0 0 0"/>
                    </Style>
                </GridView.ItemContainerStyle>
            </GridView>
            <ProgressRing x:ConnectionId='4' Width="50" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                                                                                                      
                                                                                                  />
        </Grid>
    </Grid>
</Page>

